<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="12dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/event_card_image"
                android:src="@drawable/sutd_logo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
        />
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/event_card_image"
                android:layout_alignRight="@id/event_card_image"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp">
            <TextView
                    android:id="@+id/event_card_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_default"
                    android:textStyle="bold"/>
        </android.support.v7.widget.CardView>
        <TextView
                android:id="@+id/event_card_title"
                android:text="@string/category_sports"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/category_card_text_size"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@id/event_card_image"
        />
    </RelativeLayout>

</android.support.v7.widget.CardView>
